@page
@model IndexModel
@{
    ViewData["Title"] = "Analysis page";
}

<main class="container">
    <div class="row">
        <div class="col-auto">Answer:</div>
        <div class="col"><span id="answerText"></span></div>
    </div>
    <form  class="mt-5" id="sendForm">
        <div class="form-row align-items-center justify-content-between">
            <div class="col-auto">
                <div class="form-group">
                    <label for="selectAction">Select action</label>
                    <select class="form-control" id="selectAction" name="action">
                        <option value="frequentSymbol">Find most frequent symbol</option>
                        <option value="long">Find longest word</option>
                        <option value="frequentWord">Find most frequent word</option>
                        <option value="countSymbols">Get count of symbols in text</option>
                        <option value="countWords">Get count of words in text</option>
                    </select>
                </div>
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" id="send">Send query</button>
            </div>
        </div>
        <div class="form-group">
            <textarea class="form-control" rows="20" name="text" id="textArea" placeholder="Write text"></textarea>
        </div>
    </form>
</main>